<% layout("/layouts/boilerplate") %>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter a cachy"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good</div>
          <div class="Invalid-feedback">Enter a title</div>
        </div>
  
        <div class="mb-3">
          <label for="description" class="form-label">Descripton</label>
          <textarea
            name="listing[description]"
            
            class="form-control"
            required
          ></textarea>
          
          <div class="Invalid-feedback">Please enter a short description</div>
        </div>
  
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
            name="listing[image]"
            placeholder="Enter image URL/Link"
            type="text"
            class="form-control"
          />
          
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            name="listing[image]"
            
            type="file"
            class="form-control"
          />
          
        </div>
        

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="12000"
              type="number"
              class="form-control"
              required
            />
            <div class="Invalid-feedback">Please enter a valid Price</div>
          </div>


          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="Invalid-feedback">Please enter a Valid Country name</div>
          </div>


        </div>
        
  
        
  
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Hyderabad"
            type="text"
            class="form-control"
            required
          />
          <div class="Invalid-feedback">Please enter a valid location!</div>
        </div>
        <br /><br />
        <button class=" btn btn-dark add-btn">Add</button>
      </form>
      <br>
      

      </div>
      
    </div>
    
  

